
# # form login
print ("=== Login Terlebih dahulu ===")

username = input("\nMasukkan Username:").lower()
password = input("Masukkan Password:")

while username != "cordova" or password != "055":
    print("LOGIN GAGAL!!!")
    if username != "cordova" and password == "055":
        print("=Username SALAH")
    elif username == "cordova" and password != "055":
        print("=Password SALAH")
    else:
        print("==Username Dan Password SALAH")
    username = input("\nMasukkan Username:").lower()
    password = input("Masukkan Password:")

print(">>LOGIN BERHASIL<<")

print("\n== Golongan Darah ==")

goldarAp = 0
goldarAm = 0
goldarBp = 0
goldarBm = 0
goldarABp = 0
goldarABm = 0
goldarOp = 0
goldarOm = 0

while True: 
    goldar = input("Masukkan Golongan Darah (A, B, AB, O):").strip().upper()
    if goldar == "":
        print("Harap Masukkan golongan darah!!!")
        continue
    elif goldar == "A" or goldar == "B" or goldar == "AB" or goldar == "O":
        pass
    else:
        print("INVALID")
        continue
    rhesus = input("Masukkan Rhesus nya (+/-):").strip()
    if rhesus == "":
        print("Harap Masukkan kategori rhesus!!!")
        continue
    elif rhesus == "+" or rhesus == "-":
        pass
    else:
        print("INVALID")
        continue
    print(F"Golongan Darah {goldar}{rhesus}")

    Kantdarah = input("\nMasukkan Jumlah Kantong Darah:")
    if Kantdarah == "":
        print("Harap Masukkan Jumlah Kantong Darah!!")
        continue
    elif not Kantdarah.isdigit():
        print("Input Berupa Angka, dan Bilangan bulat!!")
        continue
    Kantdarah = int(Kantdarah)
    if Kantdarah <= 0:
        print("Input berupa bilangan postif!!")
        continue

    voldarah = Kantdarah * 500
    if goldar == "A" and rhesus == "+":
        goldarAp += voldarah
    elif goldar == "A" and rhesus == "-":
        goldarAm += voldarah
    elif goldar == "B" and rhesus == "+":
        goldarBp += voldarah
    elif goldar == "B" and rhesus == "-":
        goldarBm += voldarah
    elif goldar == "AB" and rhesus == "+":
        goldarABp += voldarah
    elif goldar == "AB" and rhesus == "-":
        goldarABm += voldarah
    elif goldar == "O" and rhesus == "+":
        goldarOp += voldarah
    elif goldar == "O" and rhesus == "-":
        goldarOm += voldarah


    konfirmasi = input("\nApakah anda masih ingin menginput darah ? (Y/T):").upper()
    if konfirmasi == "":
        print("INVALID, Input Kosong, Program Berhenti")
        break
    elif konfirmasi == "T":
        print("== SELESAI ==")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah A+: {goldarAp} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah A-: {goldarAm} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah B+: {goldarBp} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah B-: {goldarBm} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah AB+: {goldarABp} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah AB-: {goldarABm} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah O+: {goldarOp} ml")
        print(f" Total Volume yang didapat dari kantong darah Dengan Golongan darah O-: {goldarOm} ml")
        break
    elif konfirmasi != "Y":
        print("INVALID, Input Salah ,Program Berhenti")
        break
